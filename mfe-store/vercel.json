{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/vite.svg", "destination": "/vite.svg" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}